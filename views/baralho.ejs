<%- include('partials/header') %>

<main>
  <div class="deck-detail-container">
    <!-- TÍTULO -->
    <h1 class="deck-title"><%= baralho.Titulo %></h1>
    
    <!-- IMAGEM -->
    <% if (baralho.Imagem) { %>
      <div class="deck-image-wrapper">
        <img 
          src="https://<%= BUCKET_NAME %>.s3.amazonaws.com/<%= baralho.Imagem %>" 
          alt="Imagem do Baralho" 
          class="deck-image-center"
        >
      </div>
    <% } else { %>
      <div class="deck-image-placeholder">Sem imagem</div>
    <% } %>

    <!-- DESCRIÇÃO ESCONDIDA -->
    <div class="deck-description" id="deck-description" style="display: none;">
      <p><%= baralho.Descricao %></p>
    </div>

    <!-- BOTÃO -->
    <button onclick="document.getElementById('deck-description').style.display='block'" class="btn-show-description">
      Mostrar Cartas
    </button>
  </div>
</main>

<%- include('partials/footer') %>
